<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid color for button background -->
    <solid android:color="@color/color_background" />

    <!-- Corner radius for rounded edges -->
    <corners android:radius="@dimen/dp16" />

    <!-- Outline border (stroke) around the button -->
    <stroke
        android:color="@color/color_1A72DD"
        android:width="@dimen/dp1" />  <!-- You may want to reduce the width -->

</shape>
