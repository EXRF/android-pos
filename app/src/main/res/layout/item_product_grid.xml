<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/dp14"
    android:background="@drawable/circle_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp130"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp14">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp96"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/img_r35" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_product_title"
            style="@style/rubik500.s14.1D2433"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_product"
            tools:text="Nissan GTR R35" />

        <TextView
            android:id="@+id/tv_product_desc"
            style="@style/rubik400.s12.757575"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_title"
            tools:text="The Nissan GTR R35" />

        <TextView
            android:id="@+id/tv_product_price"
            style="@style/rubik500.s14.1D2433"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="$1.000" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>